@model IList<WS33.WS33Model.it_transacao>

@if (Model != null && Model.Count > 0)
{    
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-warning-sign"></i>
        <span class="badge">@Model[0].total_notificacao_erro</span>
    </a>
    <ul class="dropdown-menu extended notification">
        <li class="title"> <p>@Model[0].total_notificacao_erro de documentos com erro.</p></li>
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("ErrorDetail", "Transaction", new { @id = item.cod_documento_integracao })">
                    <span class="label label-success">
                        <i class="icon-plus"></i>
                    </span>
                    <span class="message">@Html.Raw(string.Format("[{0}] - {1}", item.cod_operacao, item.nom_operacao))</span>
                    <span class="time">@item.total_dias_erro_notificacao</span>
                    @*<abbr class="time timeago" title="@item.total_dias_erro_notificacao.Ticks"></abbr>*@
                </a>
            </li>
        }
        <li class="footer">
            <a href="@Url.Action("ShowAllNotifications", "Transaction")">Ver todas notificações</a>
        </li>
    </ul>    
}
else
{    
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="icon-ok"></i>
        <span class="badge"></span>
    </a>        
    <ul class="dropdown-menu extended notification">
        <li class="title"> <p>Não há processamentos com erro.</p></li>
    </ul>    
}